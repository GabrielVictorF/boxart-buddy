<?xml version="1.0" encoding="UTF-8"?>
<artwork>
    <output type="cover" width="640" height="480">

        {% if platform in ['arcade'] %}
        <layer resource="screenshot" mpixels="0.7" align="right" valign="middle"></layer>
        {% elseif platform in ['nds'] %}
        <layer resource="screenshot" width="380" align="center" valign="middle" x="160"></layer>
        {% else %}
        <layer resource="screenshot" height="480" align="center" valign="middle" x="160"></layer>
        {% endif %}

        <mask file="mask/circle.png" width="640" height="480" x="0"/>

    </output>

</artwork>

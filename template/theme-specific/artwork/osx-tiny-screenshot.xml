<?xml version="1.0" encoding="UTF-8"?>
<!-- Default Artwork.xml -->
<artwork>
    <output type="cover" width="640" height="480">
        {% if helper is not null %}
        <layer resource="screenshot" height="{{ helper.cover(52,40)['h'] }}" width="{{ helper.cover(52,40)['w'] }}"
               align="center"
               valign="middle"
               x="-260">
        </layer>
        {% else %}
        <layer resource="screenshot" height="{{ helper.cover(52,40)['h'] }}" width="{{ helper.cover(52,40)['w'] }}"
               align="center"
               valign="middle"
               x="-260">
        </layer>
        {% endif %}

        <mask file="image-frame-mask.png" width="640" height="480" align="center" valign="middle"/>

    </output>

    <output type="screenshot" width="515" height="275">
        <layer resource="screenshot" height="275" align="center" valign="middle"/>
    </output>
</artwork>